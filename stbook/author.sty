% Remarks (sttech)
\newenvironment{stremark}[1][Remark]{%
  \bigskip%
  \par\noindent%
  \hskip\sttechhskip%
  {\hbox{\statashabox}{\textsf{\textbf{~#1}}}}%
  \par\smallskip%
}{
  \penalty10000\vskip-5pt\penalty10000%
  \par\penalty10000\vbox{\hfill\lower1.25ex\hbox{\statashabox}}
}
% Proposition (sttech)
\newenvironment{stproposition}[1][Proposition]{%
